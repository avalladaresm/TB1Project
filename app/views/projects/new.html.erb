<div class="container"> 
    <h1>Nuevo Proyecto</h1>
    
    <%= form_for @project do |f| %>
        <div>
            <%= f.label :development_order_id, "Nombre Proyecto" %>
            <%= f.select :development_order_id, DevelopmentOrder.pluck(:PROJECTNAME_DEVORDER, :id) %>
        </div>
        
        <div>
            <%= f.label :LOCATION_PROJECT, "Pais cliente solicitante" %>
            <%= f.text_field :LOCATION_PROJECT, class: 'form-control', placeholder: 'Ingrese pais cliente solicitante'%>
        </div>

        <div>
            <%= f.label :TYPE_PROJECT, "Tipo de proyecto" %>
            <%= f.text_field :TYPE_PROJECT, class: 'form-control', placeholder: 'externo o interno '%>
        </div>
        
        <div>
            <%= f.label :GITHUB_PROJECT, "GitHub" %>
            <%= f.text_field :GITHUB_PROJECT, class: 'form-control', placeholder: 'GitHub del proyecto'%>
        </div>

        <div>
            <%= f.label :TRELLO_PROJECT, "Trello" %>
            <%= f.text_field :TRELLO_PROJECT, class: 'form-control', placeholder: 'Trello del proyecto'%>
        </div>

        <div>
            <%= f.label :DATEREQ_PROJECT, "Fecha de solicitud" %>
            <%= select_date Date.today, prefix: :start_date%>
        </div>

        <div>
            <%= f.label :STARTDATE_PROJECT, "Fecha de inicio" %>
            <%= select_date Date.tomorrow, prefix: :start_date%>
        </div>

        <div>
            <%= f.label :ENDDATE_PROJECT, "Fecha de finalizacion" %>
            <%= select_date 10.days.from_now, prefix: :start_date%>
        </div>

        <div>
            <%= f.label :STATE_PROJECT, "Estado del proyecto" %>
            <%= f.text_field :STATE_PROJECT, class: 'form-control', placeholder: 'Ingrese su direccion'%>
        </div>

        <div>
            <%= f.submit :Submit, class: 'btn btn-success' %>
        </div>
    <% end %>
</div>